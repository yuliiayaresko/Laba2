<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="laba2.MainPage"
             Title="XML Processor">
    <VerticalStackLayout Padding="20">
        <Entry x:Name="KeywordEntry" Placeholder="Enter keyword for search" />
        <Picker x:Name="StrategyPicker" Title="Choose Parsing Strategy">
            <Picker.Items>
                <x:String>SAX</x:String>
                <x:String>DOM</x:String>
                <x:String>LINQ to XML</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Analyze" Clicked="OnAnalyzeButtonClicked" />
        <Button Text="Clear" Clicked="OnClearButtonClicked" />
        <Label x:Name="ResultLabel" Text="Results will appear here" />
    </VerticalStackLayout>
</ContentPage>

